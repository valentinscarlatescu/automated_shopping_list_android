<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/number_input_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="40dp"
    android:background="@drawable/dialog_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/dialogProfileCartProductCardView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:elevation="10dp"
        app:cardCornerRadius="60dp"
        app:cardPreventCornerOverlap="false">

        <ImageView
            android:id="@+id/dialogProfileCartProductImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:scaleType="centerCrop"
            tools:src="@android:drawable/alert_dark_frame" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/dialogProfileCartProductNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:text="Name: Apple" />

    <TextView
        android:id="@+id/dialogProfileCartProductCategoryTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:text="Category: fruits" />

    <TextView
        android:id="@+id/dialogProfileCartProductPriceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:text="Price: $15/unit" />

    <TextView
        android:id="@+id/dialogProfileCartProductCartsNumberTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:text="Preferred in: 23 carts" />

</LinearLayout>